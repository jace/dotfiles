#!/bin/bash

if [[ -z "$1" ]]; then
  # Don't process stdin
  exit 1
fi

# Check for all commands required to process
has_cmd() {
  for opt in "$@"; do
    if command -v "$opt" >/dev/null; then
      continue
    else
      return $?
    fi
  done
}

# Map batcat to bat
if ! has_cmd bat && has_cmd batcat; then
  alias bat=batcat
fi

# Start analysis. Is this a directory?
if [ -d "$1" ]; then
  if has_cmd eza; then
    eza -1AF --git --color=always --icons=always -- "$1" && exit || exit 1
  elif has_cmd lsd; then
    lsd -1AF -git --color=always --icon=always -- "$1" && exit || exit 1
    exit
  else
    ls -1AF --color=always -- "$1" && exit || exit 1
    exit
  fi
fi

# Is this a file?
if [ -f "$1" ]; then
  # Examine file for type (this can return multiple lines for macOS universal binaries, so limit to first)
  mime=$(file -Lb --mime-type "$1" | head -1)
  category=${mime%%/*}
  kind=${mime##*/}
  ext=${1##*.}

  if [ "$mime" = "application/pdf" ]; then
    if has_cmd timg; then
      timg -pq -- "$1" 2>/dev/null || timg -pq -g80x25 -- "$1" && exit || exit 1
    fi
    exit 1
  elif [ "$mime" = "application/vnd.sqlite3" ]; then
    if has_cmd sqlite3 bat; then
      echo -e '.schema\n.dump\n.q' | sqlite3 -- "$1" | bat --color=always -Ppl sql && exit || exit 1
    fi
    exit 1
  elif [ "$kind" == "json" ] && [ "$ext" = ipynb ] && has_cmd euporie; then
      euporie preview --color-depth 24 --color-scheme default -- "$1" && exit || exit 1
  elif [ "$category" = "image" ]; then
    if [ "$kind" != "heic" ] && has_cmd chafa; then
      chafa -f symbols -- "$1" && exit || exit 1
    elif has_cmd timg; then
      timg -pq --loops=1 --frames=1 -- "$1" 2>/dev/null || timg -pq -g80x25 --loops=1 --frames=1 -- "$1" && exit || exit 1
    elif has_cmd exiftool bat; then
      exiftool -- "$1" | bat --color=always -Ppl yaml && exit || exit 1
    fi
    exit 1
  elif [ "$category" = "video" ]; then
    if has_cmd timg; then
      timg -pq --loops=1 --frames=1 -- "$1" 2>/dev/null || timg -pq -g80x25 --loops=1 --frames=1 -- "$1" && exit || exit 1
    elif has_cmd exiftool bat; then
      exiftool -- "$1" | bat --color=always -Ppl yaml && exit || exit 1
    fi
    exit 1
  elif [ "$category" = "text" ]; then
    if [ "$ext" = "md" ]; then
      if has_cmd glow; then
        glow -- "$1" && exit || exit 1
      elif has_cmd mdless; then
        mdless -c -P --images=local -- "$1" && exit || exit 1
      fi
      exit 1
    fi
    # Unknown text
    exit 1
  fi
  # Not text, image, video or PDF. Try fq
  if has_cmd fq; then
    fq -C -- display "$1" 2>/dev/null && exit || exit 1
  fi
  # Nothing available for this file
  exit 1
fi

# Not a file
exit 1
